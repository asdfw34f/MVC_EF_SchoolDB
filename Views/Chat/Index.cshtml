@using SchoolTestsApp.ViewModels
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{

    ViewData["Title"] = "Чат с учителем";
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
    Model.Messages.Sort((x, y) => x.atDate.CompareTo(y.atDate));
}
@model ChatViewModel
<div class="container py-5">
    <div class="card">
        <div class="card-header">Чат с учителем</div>
        <div class="card-body">
            @foreach (var m in Model.Messages)
            {
                @if (m.isTeacher == true)
                {
                    <div class="row">
                        <div class="col-6">
                            <strong>Вы:</strong>
                            <div class="alert alert-secondary" role="alert">
                                   @m.Message
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="row">
                        <div class="col-6 offset-6 text-right">
                            <strong>Учитель:</strong>   <div class="alert alert-primary" role="alert">
                                @m.Message
                            </div>
                        </div>
                    </div>
                }
            }

            <form class="card-footer">
                <div class="card-text">
                    <textarea class="form-control mb-md-4"></textarea>
                </div>
                <input class="btn btn-primary" type="submit" />
            </form>
        </div>
</div>
    
   
   
</div>