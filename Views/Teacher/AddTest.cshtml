@{
    ViewData["Title"] = "Добаление теста";
    List<SelectListItem> classes = ViewBag.Classes;
    Layout = "~/Views/_LayoutTeacher.cshtml";
}
<div>
    <form asp-controller="Tests" asp-action="AddTest" method="post" enctype="multipart/form-data">
        <h2>
            Добавление теста
        </h2>
        <ul>
            <li>
                @Html.DropDownList("classesItems", classes, "Выберите класс")
            </li>
            <li>
                <div class="main-choice">

                    <label class="input-file">
                        <input type="file" name="file" placeholder=".docx файл теста" required />
                        <span class="input-file-btn">Выберите файл</span>
                        <span class="input-file-text">Максимум 10мб</span>
                    </label>

                </div>            </li>
            <li>

                <input type="text" name="title" value="" placeholder="Название" />
            </li>
            <li>
                <input class="btn" type="submit" value="Отправить тест" action="AddTest" />
            </li>
            <li>
                @ViewBag.FileDone
            </li>

        </ul>
    </form>
</div>