@{
}
@model QuestionModel
<div class="editorRow" id="edit @Model.id">
    <hr />
    <span>Вопрос: </span> @Html.EditorFor(m => m.Question)
    <ul id="ques" class="list-group">
            <label>Варианты ответа</label>
        <li class="list-group-item">
            <span>1. </span>

            @Html.EditorFor(m => m.Answer1)
            <span>2. </span>
            @Html.EditorFor(m => m.Answer2)
        </li>

        <li class="list-group-item">
            <span>3. </span>
            @Html.EditorFor(m => m.Answer3)
            <span>4. </span>
            @Html.EditorFor(m => m.Answer4)
        </li>
        <li class="list-group-item">
            <span>Парвильный ответ:</span>
            @Html.EditorFor(m => m.RightAnswer)
        </li>
    </ul>
    <input type="button" onclick="deleteItem(@Model.id)" class="deleteRow" value="Удалить вопрос"/>
</div>
