@using SchoolTestsApp.Models.DB.Entities
@{

    ViewData["Title"] = "Просмотр ученика";
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
}
@model Student

<div class="tests-contain">
    <style>
        .tests-contain {
            height: 90vh;
            width: 100vw;
            margin-left: 0;
            overflow-x: auto;
            background-color: whitesmoke;
        }

            .tests-contain ul li {
                color: black;
                font-size: 24px;
            }

            .tests-contain h5 {
                color: black;
            }

            .tests-contain ul {
                width: 90vw;
                display: grid;
                grid-template-columns: auto auto auto;
            }

        input[type=submit] {
            font-size: 24px;
        }

        hr {
            opacity: 0.9;
            color: #212531;
            width: 100vw;
        }

        .li-title {
            width: 150px;
            left: 0;
            margin: 0;
        }

        .table {
            background-color: whitesmoke;
        }

        table, th, td {
            border-collapse: separate;
            empty-cells: hide;
        }

        th, td {
            max-width: 400px;
            min-width: 200px;
        }

            td[name=desc-cell] {
                white-space: pre-wrap;
                word-break: break-word;
            }

        .td-subject {
            text-align: center;
        }

        #row-table-td {
            background-color: whitesmoke;
            white-space: pre-wrap;
        }
    </style>
    
    <h2>Пройденные тесты</h2>
    @if (Model !=null && Model.HistoryTests != null && Model.HistoryTests.Count > 0)
    {
        <h3>

            @Model.SecondName @Model.Name @Model.ThridName
        </h3>

        <hr size="7" />
        <table name="table" class="table">
            <tread class="table-row-tread">
                <tr class="columns-table">
                    <th>Тема</th>
                    <th>Оценка</th>
                </tr>
            </tread>
            <tbody id="me-rows">

                @if (Model.HistoryTests != null && Model.HistoryTests.Count() > 0)
                {
                    foreach (var t in Model.HistoryTests)
                    {
                        <tr>
                            <td class="td-subject" id="row-table-td" class="cell-multi">@t.Test.Title</td>
                            <td id="row-table-td">@t.Mark</td>
                        </tr>
                    }
                }
                else
                {

                }
            </tbody>
        </table>
    }
    else
    {
        <h4>Нет пройденных тестов</h4>
    }

</div>