@{
    ViewData["Title"] = "Добаление теста";
 //   var classes = ViewBag.ClassId;
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
}
<div>
    <div class="for-form">
        <h4>
            Добавление теста
        </h4>
    <form asp-controller="Teacher" asp-action="PostTest" method="post" enctype="multipart/form-data">
        <ul>
            <li>
                <div class="file-container">

                    <label class="input-file">
                        <input type="file" name="file" placeholder=".docx файл теста" required />
                        <span class="input-file-btn">Выберите файл</span>
                        <span class="input-file-text">Максимум 10МБ</span>
                    </label>

                </div>            </li>
           <li>
               <ul>
                   <li>
                        @Html.DropDownList("classId", ViewData["Classes"] as SelectList, "Выберите класс")
                   </li>
                   <li>
                        <input class="input-title-test" type="text" name="title" value="" placeholder="Название" required/>
                   </li>
               </ul>

            </li>
            <li>
                <input class="btn" type="submit" value="Отправить тест" action="PostTest" />
            </li>
            <li>
                @ViewBag.FileDone
            </li>

        </ul>
    </form>
    </div
</div>